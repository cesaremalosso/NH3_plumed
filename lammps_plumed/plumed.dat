 # vim:ft=plumed
 # UNITS LENGTH=A TIME=ps ENERGY=eV
 
 energy: ENERGY
 vol: VOLUME
 
 ecv1: ECV_MULTITHERMAL_MULTIBARIC ...
   ARG=energy,vol
   TEMP=900
   TEMP_MIN=500
   TEMP_MAX=1400
   PRESSURE=0.06022140857*9e5     # 60GPa 
   PRESSURE_MIN=0.06022140857*8e5 # 30GPa  
   PRESSURE_MAX=0.06022140857*1e6 # 100GPa 
 ...
 
 opes: OPES_EXPANDED ARG=ecv1.* PACE=200 WALKERS_MPI FILE=DeltaFs.data OBSERVATION_STEPS=500
 
 PRINT STRIDE=250 ARG=* FILE=COLVAR
